{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es2019",
    "moduleResolution": "node",
    "module": "CommonJS",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["gulpfile.js"]
}
